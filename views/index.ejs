<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head') %>
        <title>Book Search</title>
    </head>
  <body>
    <%- include('partials/header') %>
    <h1 id="book-count">Book Count: <%= books.length %></h1>
    <div id="books-populating">
        <% books.forEach((book) => { %>
          <div class="each-book">
            <img src="<%= book.image_url %>" class="book-image"/>
            <p class="book-title"><%= book.title %></p>
            <p class="book-author"><%= book.author %></p>
            <button class="button" type="button"><a href="/books/<%= book.id %>">View Details</a></button>
          </div>
        <% }) %>
    </div>

    <%- include('partials/footer') %>

  </body>
</html>